<% if current_user %>
  <%= form_for(@post) do |f| %>
    <% if @post.errors.any? %>
      <div id="error_explanation">
        <h2><%= pluralize(@post.errors.count, "error") %> prohibited this post from being saved:</h2>

        <ul>
          <% @post.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
        </ul>
      </div>
    <% end %>

    <div class="field">
      <%= f.label :title %><br>
      <%= f.text_field :title %>
    </div>
    <div class="field">
      <%= f.label :tag_list, 'Tags' %><br>
      <%= f.text_field :tag_list %>
    </div>
    <br>
    <div class="field">
      <%= f.label :body %><br>
      <%= f.text_area :body, class: 'wysihtml5', :size => "80x20" %>
    </div>
    <br />
    <div class="actions">
      <%= f.submit 'Add Post', class: 'btn btn-sm btn-default' %>

      <% if @post.try(:published) == true %>
        <%= link_to 'Unpublish', unpublish_path(post: @post), class: 'btn btn-sm btn-warning' %>
      <% else %>
        <%= link_to 'Publish', publish_path(post: @post), class: 'btn btn-sm btn-success' %>
      <% end %>

    </div>
  <% end %>
<% end %>

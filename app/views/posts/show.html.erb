<div id="post">
	<% if current_user %>
	  <%= link_to 'Edit', edit_post_path(@post) %> |
	  <%= link_to 'Back', posts_path %>
	<% end %>

	<br>

		<h1 class='posttitle'>
		<span class="underline">
			<%= @post.title.downcase %>
		</span>
	    
	  </h1>

	  

	  <div class="postdate">
	  	<%= @post.created_at.to_time.strftime('%B %d %Y') %> <br> <br>
	  </div>
	  



	<p>
	  <strong></strong>
	  <%= raw @post.body %>
	</p>

</div>


